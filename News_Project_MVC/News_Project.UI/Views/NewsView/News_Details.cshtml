@using  News_Project.Entity.Model
@model News_Project.UI.Models.News_DetailModel
@{
    ViewBag.Title = "News_Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 

 @TempData["alert"]


<!-- Start post-content Area -->
<section class="post-content-area single-post-area" >
    <div class="container" style="margin-top:50px;">
        <div class="row">
            <div class="col-lg-9 posts-list">
                <div class="single-post-blog row">
                    <div class="col-lg-12 owl-carousel active-banner">
                                @foreach (var item in Model.News.Galleries.Where(x => x.NewsId == Model.News.NewsId).Select(x => x.ImagePath))
                                {
                                    <div class="single-post">
                                        <div class="thumb">
                                            <div class="relative">
                                                <img class="f-img img-fluid mx-auto" src="~/@item"  style="width:690px;height:434px;"alt="">
                                                <div class="overlay overlay-bg"></div>
                                            </div>
                                        </div>
                                        
                                    </div>
                                }
                    </div>
                    <div class="col-lg-12">
                        <h1 class="mt-20 mb-20">
                            @Model.News.NewsTitle
                        </h1>

                        <div class="row tags">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div>
                                     @Html.ActionLink(@Model.News.Category.CategoryName, "Archive", "Archive", new { CategoryNo = @Model.News.Category.CategoryId }, new { @class ="genric-btn primary-border small;" })
                                </div>
                                <div>
                                    <a class="genric-btn primary-border smalle">Görüntüleme: @Model.News.ViewsCounter</a>
                                </div>
                                
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 text-right">
                                <div class="d-flex justify-content-end">
                                    <div class="mr-15">
                                        <h5 class="text-white">Mark wiens</h5>
                                        <p>@Model.News.CreateDate</p>
                                    </div>
                                    <div>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>

                        <p class="excert">
                            @Model.News.NewsContent
                        </p>
                    </div>
                        
                    </div>
                </div>
            <div class="col-lg-3 col-md-6 col-sm-5">
                <div class="row">
                    <div class="col-lg-12 col-md-5 col-sm-6">
                        <div class="single-post mb-20">
                            <div class="thumb">
                                <div class="relative">
                                    <img class="f-img img-fluid w-100" src="~/Assets/img/c1.jpg" alt="">
                                    <div class="overlay overlay-bg"></div>
                                </div>
                            </div>
                            <div class="details">
                                <div class="top-part d-flex justify-content-between">
                                    <div>
                                        <h4>United States</h4>
                                        <p>Saturday, September 08, 2018</p>
                                    </div>
                                    <div>
                                        <span class="lnr lnr-arrow-down text-white"></span>
                                    </div>
                                </div>
                                <div class="middle-part">
                                    <h1>28ºC</h1>
                                    <p>Partly Cloudy</p>
                                </div>

                                <div class="bottom-part">
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-5 col-sm-6">
                        <div class="single-post">
                            <div class="thumb">
                                <div class="relative">
                                    <img class="f-img img-fluid w-100" src="~/Assets/img/c2.jpg" alt="">
                                    <div class="overlay overlay-bg"></div>
                                </div>
                            </div>
                            <div class="details">
                                <div class="bottom d-flex justify-content-between">
                                    <div>
                                        <h4 class="mt-0">Recent Playlist</h4>
                                        <p>Selected by techmania</p>
                                    </div>
                                    <div>
                                        <span class="lnr lnr-arrow-down text-white"></span>
                                    </div>
                                </div>
                                <ul class="list">
                                    <li>
                                        <a href="#">
                                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod.
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod.
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod.
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                <div class="tag-details">
                    <div class="row">
                        <div class="col-lg-4 col-md-4">
                            <p>
                                <a href="#">
                                    <span class="lnr lnr-heart"></span>
                                    Lily and 4 people like this
                                </a>
                            </p>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <p>
                                <a href="#">
                                    <span class="lnr lnr-bubble"></span>
                                    @Model.News.Comments.Where(X=>X.HaberId==Model.News.NewsId).Count()
                                </a>
                            </p>
                        </div>
                        <div class="col-lg-4 col-md-4 text-right">
                            <p>
                                <a href="#">
                                    <span class="fa fa-facebook"></span>
                                </a>
                                <a href="#">
                                    <span class="fa fa-twitter"></span>
                                </a>
                                <a href="#">
                                    <span class="fa fa-dribbble"></span>
                                </a>
                                <a href="#">
                                    <span class="fa fa-behance"></span>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="comments-area col-lg-9">
                    @foreach (var item in Model.Comments)
                    {
                        <div class="comment-list">
                            <div class="single-comment justify-content-between d-flex">
                                <div class="user justify-content-between d-flex">
                                    <div class="thumb">
                                        <img src="~/Assets/img/blog/c5.jpg" alt="">
                                    </div>
                                    <div class="desc">
                                        <h5><a href="#">@item.FullName</a></h5>
                                        <p class="date">@item.CreateDate </p>
                                        <p class="comment">
                                            @item.CommentContent
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        <div class="comment-form col-lg-9">
            <h4>Leave a Reply</h4>
            @using (Html.BeginForm("CommentAdd", "NewsView", FormMethod.Post))
            {
                <div class="form-group form-inline">
                    <div class="form-group col-lg-6 col-md-12 name">
                        <input type="text" class="form-control" id="name" name="FullName" placeholder="Enter Name" onfocus="this.placeholder = ''"
                               onblur="this.placeholder = 'Enter Name'">
                    </div>
                    <div class="form-group col-lg-6 col-md-12 email">
                        <input type="email" class="form-control" id="email" name="Mail" placeholder="Enter email address" onfocus="this.placeholder = ''"
                               onblur="this.placeholder = 'Enter email address'">
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="subject"  name="CommentTitle" placeholder="Subject" onfocus="this.placeholder = ''"
                           onblur="this.placeholder = 'Subject'">
                </div>
                <div class="form-group">
                    <textarea class="form-control mb-10" rows="5" name="CommentContent" placeholder="Messege" onfocus="this.placeholder = ''"
                              onblur="this.placeholder = 'Messege'" required=""></textarea>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="subject" name="HaberId" value="@Model.News.NewsId" style="display:none">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="subject" name="CreateDate" value="@DateTime.Now" style="display:none">
                </div>
                <input type="submit" value="Post Comment" class="primary-btn fill">
            }
        </div>
        </div>
    </div>
</section>
<!-- End post-content Area -->
