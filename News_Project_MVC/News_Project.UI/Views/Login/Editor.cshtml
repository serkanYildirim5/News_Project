@model List<News_Project.Entity.Model.Comment>
@{
    ViewBag.Title = "Editor";
    Layout = "~/Views/Shared/_LayoutControlPanel.cshtml";
}
    <div>
        <h1>Hoşgeldin @ViewBag.Ad</h1>
    </div>
<table id="mytable" class="table table-bordred table-striped" style="margin-top:200px">

    <thead>

    <th><input type="checkbox" id="checkall" /></th>
    <th>Id</th>
    <th>Post Title</th>
    <th>Post Text</th>
    <th>Edit</th>
    <th>Post FullName</th>
    <th>Post Email</th>
    <th>Post Date</th>    
    <th>Delete</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox" class="checkthis" /></td>
               
                @Html.Partial("_PartialCommentDelete", item)
                <td>
                    <p data-placement="top" data-toggle="tooltip" title="Delete">
                        <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete">
                            @Html.ActionLink("Delete", "CommentDelete", "NewsView", item , new { @class = "btn btn-danger btn-xs" })
                        </button>
                    </p>
                </td>
            </tr>
        }






    </tbody>

</table>



